<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:text="Records"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="56dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:text="Record:"
            android:layout_marginStart="15dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_splash_logo"
                    android:layout_height="30dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:text="Mobile"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"/>

            </LinearLayout>



        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_splash_logo"
                    android:layout_height="30dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:text="WhatsApp"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_target_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cm_dp_56">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:text="Target:"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/cm_dp_20"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_record_target"
            android:layout_width="0dp"
            android:layout_weight="1"
            tools:text="target:"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/cm_dp_20"
            android:layout_marginEnd="@dimen/cm_dp_20"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_feedback_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cm_dp_56">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:text="Feedback:"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/cm_dp_20"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_record_feedback"
            android:layout_width="0dp"
            android:layout_weight="1"
            tools:text="Feedback:"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/cm_dp_20"
            android:layout_marginEnd="@dimen/cm_dp_20"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>